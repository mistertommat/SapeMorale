<script>
    $(function () {

        switch ($('#hdnUserMorale').val()) {
            case "H":
                $('#imgHigh').addClass("highlight-icon");
                break;
            case "MH":
                $('#imgHighish').addClass("highlight-icon");
                break;
            case "M":
                $('#imgMedium').addClass("highlight-icon");
                break;
            case "L":
                $('#imgLow').addClass("highlight-icon");
                break;
            case "VL":
                $('#imgVeryLow').addClass("highlight-icon");
                break;
        }

        function hideAllAck() {
            $("#ackHigh").hide();
            $("#ackHighish").hide();
            $("#ackMedium").hide();
            $("#ackLow").hide();
            $("#ackVeryLow").hide();
            $('#imgHigh').removeClass("highlight-icon");
            $('#imgHighish').removeClass("highlight-icon");
            $('#imgMedium').removeClass("highlight-icon");
            $('#imgLow').removeClass("highlight-icon");
            $('#imgVeryLow').removeClass("highlight-icon");
        }

        $(".tip-right").tooltip({ placement: 'right' });

        $('#imgHigh').click(function (e) {
            $('#imgHigh').addClass("hover-glow");
            hideAllAck();
            $.ajax({
                url: "/Home/SubmitHigh",
                type: "POST",
                data: '',
                beforeSend: function () {
                    $("#busyHigh").show();                    
                }
            }).done(function (returnedJSON) {
                $("#busyHigh").hide();
                if (returnedJSON.success && returnedJSON.msg == "Submitted") {
                    $("#ackHigh").show();
                    $("#failHigh").hide();
                    $('#imgHigh').addClass("highlight-icon");
                }
                else if (returnedJSON.success && returnedJSON.msg == "Deleted") {
                    $("#ackHigh").hide();
                    $("#failHigh").hide();
                    $('#imgHigh').removeClass("hover-glow");
                    $('#imgHigh').removeClass("highlight-icon");
                }
                else {
                    $("#failHigh").show();
                    $("#ackHigh").hide();
                    return false;
                }
            });
        });

